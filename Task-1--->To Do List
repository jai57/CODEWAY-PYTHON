class ToDoList:
    def __init__(self):
        self.tasks = {}

    def display_tasks(self):
        if not self.tasks:
            print("No tasks found.")
        else:
            print("Your To-Do List:")
            for task, status in self.tasks.items():
                print(f"[{'X' if status else ' '}] {task}")

    def add_task(self, task):
        if task not in self.tasks:
            self.tasks[task] = False
            print(f"Task '{task}' added to the To-Do List.")
        else:
            print("Task already exists in the To-Do List.")

    def mark_as_done(self, task):
        if task in self.tasks:
            self.tasks[task] = True
            print(f"Task '{task}' marked as done.")
        else:
            print("Task not found in the To-Do List.")

    def remove_task(self, task):
        if task in self.tasks:
            del self.tasks[task]
            print(f"Task '{task}' removed from the To-Do List.")
        else:
            print("Task not found in the To-Do List.")

def main():
    todo_list = ToDoList()

    while True:
        print("\nOptions:")
        print("1. Display Tasks")
        print("2. Add Task")
        print("3. Mark Task as Done")
        print("4. Remove Task")
        print("5. Quit")

        choice = input("Enter your choice (1-5): ")

        if choice == "1":
            todo_list.display_tasks()
        elif choice == "2":
            task = input("Enter the task: ")
            todo_list.add_task(task)
        elif choice == "3":
            task = input("Enter the task to mark as done: ")
            todo_list.mark_as_done(task)
        elif choice == "4":
            task = input("Enter the task to remove: ")
            todo_list.remove_task(task)
        elif choice == "5":
            print("Goodbye!")
            break
        else:
            print("Invalid choice. Please enter a number between 1 and 5.")

if __name__ == "__main__":
    main()
